<%- include partials/commons/html_header.ejs %>
<style>
div#page1 .bubble {
	position: absolute;
	left: 20px;
	border-left: 5px solid black;
	border-top: 5px solid transparent;
	-border-top-color: white;
}
div#page1 .bubble .body {
	float: left;
	padding: 5px 10px;
	margin: 0 0 0 -15px;
	border: 3px solid black;
	border-radius: 6px;
	-moz-border-radius: 6px;
	-webkit-border-radius: 6px;
	background: white;
	font: bold 15px/1.2 "Chalkboard", "Comic Sans MS", cursive;
	text-align: center;
	color: black;
	-position: relative;
}
div#page1 .top_header {
	width: 315px;
	height: 80px;
	position: relative;
	background: url('/images/head_bg.jpg');
	border: 0px solid #b8b8b8;
}
div#page1 .detail_sections {
	width:  315px;
	position: relative;
	margin: 5px 0 0 0;
}
div#page1 .img_section {
	float:  left;
	margin: 0 5px;
}
div#page1 .img_section img {
	width:  130px;
	height: 180px;
	border: 3px solid rgb(252,193,224);
}
div#page1 .result {
	clear: both;
	width: 250px;
	height: 1.3em;
	margin: 0 auto;
	border: 3px solid #59cd7b;
	background: #f0f8ee;
	padding: 0.2em 25px;
	font-size: 28pt;
}
div#page1 .img_comment2 {
	float:  left;
	border-style: none;
	font-weight: bold;
}
div#page1 .img_comment3 {
	float:  right;
	border-style: none;
	font-weight: bold;
}
div#page1 .hidden {
	display: none;
}
div#page1 .img_comment3 img {
	height: 1.0em;
}
div#page1 .space {
}
div#page1 .vote {
	margin: 10px 0 0 0;
	clear:  left;
}
div#page1 .result-messages {
	width:  315px;
	position: relative;
	margin: 20px 0 0 0;
}
div#page1 .result-title {
	width: 100%;
	padding: 0.1em 0;
	text-align: center;
	font-weight: bold;
	font-size: 32pt;
	letter-spacing: 0.1em;
	background: #ffd700;
	background-image: -webkit-gradient(linear,left top,left bottom,from(#ffd700),to(#f0f8ee));
	background-image: -webkit-linear-gradient(#ffd700,#f0f8ee);
	background-image: -moz-linear-gradient(#ffd700,#f0f8ee);
	background-image: -ms-linear-gradient(#ffd700,#f0f8ee);
	background-image: -o-linear-gradient(#ffd700,#f0f8ee);
	background-image: linear-gradient(#ffd700,#f0f8ee);
}

.ui-select .ui-btn-icon-right .ui-btn-inner {
	padding: 1.0em 45px 1.0em 0;
}
.ui-li .ui-btn-inner a.ui-link-inherit, .ui-li-static.ui-li {
	padding: 1.0em 15px;
}
#submit_space span.ui-btn-inner {
	padding: 1.6em 20px;
}

.ui-field-contain input.ui-input-text, .ui-field-contain textarea.ui-input-text, .ui-field-contain .ui-input-search {
	width: 70%;
	margin: 0 0 0 10px;
}
</style>
